import os
import datetime
 
testpath = input('Folder')
 
if os.path.exists(testpath):
    if os.path.isfile(testpath):
        print('File')
        print('size:',os.path.getsize(testpath)//1024,'Кб')
        print('Date:',\
              datetime.datetime.fromtimestamp(int(os.path.getmtime(testpath))))
    elif os.path.isdir(testpath):
        print('Folder')
        print('File's count: ',os.listdir(testpath))
else:
    print('File don't found')
